{% extends 'base.html.twig' %}

{% block title %}Liste formations{% endblock %}

{% block body %}
<table class="table">
  <thead>
    <tr>
      <th scope="col">Nom court de la formation :</th>
      <th scope="col">Nom long de la formation :</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
{% for formation in listeFormations %}
    <tr>
      <th scope="row">{{ formation.getNomCourt() }}</th>
      <td>{{ formation.getNomLong() }}</td>
      <td><a href = '{{path('pageStagesParFormation', {'id': formation.id})}}';">Consulter la liste de stages</a></td>
    </tr>
{% endfor %}
</tbody>
</table>
{% endblock %}