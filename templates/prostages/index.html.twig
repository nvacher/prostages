{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}


<div class="example-wrapper">
    <h1>Bienvenue sur la page d'accueil de ProStage</h1>
    <table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Stage :</th>
      <th scope="col">Description du stage :</th>
      <th scope="col">Entreprise :</th>
    </tr>
  </thead>
<tbody>
    {% for stage in liste_stages %}     <! -- Tableau qui affiche les diffÃ©rents stages avec l'entreprise + bouton pour consulter -->
    <tr>
      <th scope="row"><button type="button" class="btn btn-primary" onclick="window.location.href = '{{path('pageStage', {'id': stage.id})}}';">Consulter le stage</button></th>
      <td>{{ stage.titre }}</td>
      <td>{{ stage.description }}</td>
      <td>{{ stage.entreprise.nom }}</td>
    </tr>
    {% endfor %}
    </tbody>
    </table>
</div>
{% endblock %}