{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Bienvenue sur la page d'accueil de Prostages</h1>
    {% for stage in liste_stages %}
        <p>Stage<p>
        <p>{{ stage.titre }}<p>
        <p>Description du stage :<p>
        <p>{{ stage.description }}<p>
        <p>Mail du contact :<p>
        <p>{{ stage.mail }}<p>
        <p>Entreprise proposant le stage :<p>
        <p>{{ stage.entreprise.nom }}<p>

        <p>Formation(s) de ce stage :<p>
        <ul>{% for formation in stage.formations %}
            <li>{{ formation.nomCourt }}</li>
        {% endfor %}
        </ul>
    {% endfor %}
</div>
{% endblock %}
